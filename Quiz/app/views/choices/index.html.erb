<h1>Choices</h1>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th style="text-aling:center">Option</th>
      <th>Question</th>
      <th>Correct</th>

      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @choices.each do |choice| %>
      <tr>
        <td><strong><%= choice.option_desc %></strong></td>
        <td><strong><%= choice.question_id %></strong></td>
        <td><%= choice.correct %></td>

        <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
        <td><%= link_to 'Delete', choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Choice', new_choice_path %>
